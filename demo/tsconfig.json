{
    "compilerOptions": {
      "target": "ES2017",
      "module": "esnext",
      "moduleResolution": "node",
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        },
      "plugins": [
        {
          "transform": "@nativescript/webpack/transformers/ns-transform-native-classes",
          "type": "raw"
        }
      ]
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}
